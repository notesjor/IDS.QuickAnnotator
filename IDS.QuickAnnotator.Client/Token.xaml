<UserControl x:Class="IDS.QuickAnnotator.Client.Token"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IDS.QuickAnnotator.Client"
             mc:Ignorable="d" Padding="0 0 5 0"
             >
  <StackPanel x:Name="RootPanel" MouseEnter="RootPanel_MouseEnter" MouseLeave="RootPanel_MouseLeave" MouseRightButtonUp="RootPanel_MouseRightButtonUp" MouseLeftButtonUp="RootPanel_MouseLeftButtonUp">
    <Rectangle Height="3" Fill="White" x:Name="HighlightColor"/>
    <TextBlock Background="White" x:Name="TokenStr"></TextBlock>
  </StackPanel>
</UserControl>
