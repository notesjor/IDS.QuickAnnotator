<UserControl x:Class="IDS.QuickAnnotator.Client.Editor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IDS.QuickAnnotator.Client"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="white">
  <ScrollViewer x:Name="MyScrollViewer" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Focusable="False">
    <WrapPanel Orientation="Horizontal" x:Name="EditorContent" Focusable="True" MinWidth="250" Width="{Binding ElementName=MyScrollViewer, Path=ViewportWidth}">
    </WrapPanel>
  </ScrollViewer>
</UserControl>
